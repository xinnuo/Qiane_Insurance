<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/item_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_size_10">

            <ImageView
                android:id="@+id/item_read_img"
                android:layout_width="@dimen/dimen_size_55"
                android:layout_height="@dimen/dimen_size_55"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_logo"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_size_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_read_name"
                    style="@style/Font15_black_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/dimen_size_3"
                    android:text="标题" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_10">

                    <TextView
                        android:id="@+id/item_read_age"
                        style="@style/Font13_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rec_bg_white_stroke_lighter"
                        android:paddingBottom="@dimen/dimen_size_2"
                        android:paddingEnd="@dimen/dimen_size_5"
                        android:paddingStart="@dimen/dimen_size_5"
                        android:paddingTop="@dimen/dimen_size_2"
                        android:text="男 0岁" />

                    <TextView
                        android:id="@+id/item_read_money"
                        style="@style/Font13_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_size_10"
                        android:background="@drawable/rec_bg_white_stroke_lighter"
                        android:paddingBottom="@dimen/dimen_size_2"
                        android:paddingEnd="@dimen/dimen_size_5"
                        android:paddingStart="@dimen/dimen_size_5"
                        android:paddingTop="@dimen/dimen_size_2"
                        android:text="年交0.00元" />

                </LinearLayout>

                <TextView
                    android:id="@+id/item_read_content"
                    style="@style/Font14_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_10"
                    android:text="最后查看：" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/item_read_divider1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginEnd="@dimen/dimen_size_10"
            android:layout_marginStart="@dimen/dimen_size_75"
            android:background="@color/divider" />

    </LinearLayout>

    <View
        android:id="@+id/item_read_divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider"
        android:visibility="gone" />

</LinearLayout>