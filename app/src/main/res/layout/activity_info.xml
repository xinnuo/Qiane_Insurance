<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/info_img_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:onClick="doClick"
        android:padding="@dimen/dimen_size_10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/Font14_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像" />

            <TextView
                style="@style/Font13_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_size_5"
                android:text="请上传证件照或职业照" />

        </LinearLayout>

        <com.sunfusheng.glideimageview.GlideImageView
            android:id="@+id/info_img"
            android:layout_width="@dimen/dimen_size_40"
            android:layout_height="@dimen/dimen_size_40"
            android:scaleType="centerCrop"
            android:src="@mipmap/personal_tx"
            app:riv_is_circle="true" />

        <ImageView
            android:layout_width="@dimen/dimen_size_12"
            android:layout_height="@dimen/dimen_size_12"
            android:layout_marginStart="@dimen/dimen_size_5"
            android:src="@mipmap/per_top_icon05"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginEnd="@dimen/dimen_size_10"
        android:layout_marginStart="@dimen/dimen_size_10"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dimen_size_0"
        android:paddingStart="@dimen/dimen_size_10">

        <TextView
            style="@style/Font14_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称" />

        <EditText
            android:id="@+id/info_nick"
            style="@style/Font14_black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="end|center_vertical"
            android:hint="请输入昵称"
            android:imeOptions="actionDone"
            android:maxLength="16"
            android:paddingEnd="@dimen/dimen_size_10"
            android:paddingStart="@dimen/dimen_size_10"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/info_clear"
            android:layout_width="@dimen/dimen_size_25"
            android:layout_height="match_parent"
            android:onClick="doClick"
            android:paddingBottom="@dimen/dimen_size_15"
            android:paddingEnd="@dimen/dimen_size_10"
            android:paddingStart="@dimen/dimen_size_0"
            android:paddingTop="@dimen/dimen_size_15"
            android:src="@mipmap/plan_del01"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginEnd="@dimen/dimen_size_10"
        android:layout_marginStart="@dimen/dimen_size_10"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dimen_size_10"
        android:paddingStart="@dimen/dimen_size_10">

        <TextView
            style="@style/Font14_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="真实姓名" />

        <TextView
            android:id="@+id/info_name"
            style="@style/Font14_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginEnd="@dimen/dimen_size_10"
        android:layout_marginStart="@dimen/dimen_size_10"
        android:background="@color/divider" />

    <LinearLayout
        android:id="@+id/info_gender_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:gravity="center_vertical"
        android:onClick="doClick"
        android:paddingEnd="@dimen/dimen_size_10"
        android:paddingStart="@dimen/dimen_size_10">

        <TextView
            style="@style/Font14_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="性别" />

        <TextView
            android:id="@+id/info_gender"
            style="@style/Font14_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男" />

        <ImageView
            android:layout_width="@dimen/dimen_size_12"
            android:layout_height="@dimen/dimen_size_12"
            android:layout_marginStart="@dimen/dimen_size_5"
            android:src="@mipmap/per_top_icon05"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginEnd="@dimen/dimen_size_10"
        android:layout_marginStart="@dimen/dimen_size_10"
        android:background="@color/divider" />

    <LinearLayout
        android:id="@+id/info_tel_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:gravity="center_vertical"
        android:onClick="doClick"
        android:paddingEnd="@dimen/dimen_size_10"
        android:paddingStart="@dimen/dimen_size_10">

        <TextView
            style="@style/Font14_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="注册手机号码" />

        <TextView
            android:id="@+id/info_tel"
            style="@style/Font14_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="@dimen/dimen_size_12"
            android:layout_height="@dimen/dimen_size_12"
            android:layout_marginStart="@dimen/dimen_size_5"
            android:src="@mipmap/per_top_icon05"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginEnd="@dimen/dimen_size_10"
        android:layout_marginStart="@dimen/dimen_size_10"
        android:background="@color/divider" />

    <LinearLayout
        android:id="@+id/info_real_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:gravity="center_vertical"
        android:onClick="doClick"
        android:paddingEnd="@dimen/dimen_size_10"
        android:paddingStart="@dimen/dimen_size_10">

        <TextView
            style="@style/Font14_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="实名认证" />

        <TextView
            android:id="@+id/info_real"
            style="@style/Font14_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未认证" />

        <ImageView
            android:layout_width="@dimen/dimen_size_12"
            android:layout_height="@dimen/dimen_size_12"
            android:layout_marginStart="@dimen/dimen_size_5"
            android:src="@mipmap/per_top_icon05"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginEnd="@dimen/dimen_size_10"
        android:layout_marginStart="@dimen/dimen_size_10"
        android:background="@color/divider" />

    <LinearLayout
        android:id="@+id/info_job"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:gravity="center_vertical"
        android:onClick="doClick"
        android:paddingEnd="@dimen/dimen_size_10"
        android:paddingStart="@dimen/dimen_size_10">

        <TextView
            style="@style/Font14_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="职业信息" />

        <TextView
            style="@style/Font14_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="@dimen/dimen_size_12"
            android:layout_height="@dimen/dimen_size_12"
            android:layout_marginStart="@dimen/dimen_size_5"
            android:src="@mipmap/per_top_icon05"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

</LinearLayout>