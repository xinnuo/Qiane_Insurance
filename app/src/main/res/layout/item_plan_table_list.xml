<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_40">

        <TextView
            android:id="@+id/item_plan_column1"
            style="@style/Font13_gray"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="2"
            android:paddingEnd="@dimen/dimen_size_2"
            android:paddingStart="@dimen/dimen_size_2"
            android:text="列1" />

        <View
            android:layout_width="@dimen/divider_height"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/item_plan_column2"
            style="@style/Font13_gray"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="2"
            android:paddingEnd="@dimen/dimen_size_2"
            android:paddingStart="@dimen/dimen_size_2"
            android:text="列2" />

        <View
            android:layout_width="@dimen/divider_height"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/item_plan_column3"
            style="@style/Font13_gray"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="2"
            android:paddingEnd="@dimen/dimen_size_2"
            android:paddingStart="@dimen/dimen_size_2"
            android:text="列3" />

        <View
            android:layout_width="@dimen/divider_height"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/item_plan_column4"
            style="@style/Font13_gray"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="2"
            android:paddingEnd="@dimen/dimen_size_2"
            android:paddingStart="@dimen/dimen_size_2"
            android:text="列4" />

    </LinearLayout>

    <View
        android:id="@+id/item_plan_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

</LinearLayout>