<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bj"
    android:orientation="vertical">

    <ImageView
        android:id="@id/iv_nav_back"
        android:layout_width="@dimen/dimen_size_90"
        android:layout_height="@dimen/dimen_size_45"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/toolbar_padding_top"
        android:onClick="doClick"
        android:paddingEnd="@dimen/dimen_size_45"
        android:paddingStart="@dimen/dimen_size_0"
        android:src="@mipmap/nav_back_white"
        tools:ignore="ContentDescription" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_110"
        android:layout_marginTop="@dimen/dimen_size_20"
        android:src="@mipmap/login_logo"
        tools:ignore="ContentDescription" />

    <TextView
        style="@style/Font13_lighter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:gravity="center"
        android:text="经纪人版"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginTop="@dimen/dimen_size_20"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dimen_size_15"
        android:paddingStart="@dimen/dimen_size_15">

        <ImageView
            android:layout_width="@dimen/dimen_size_20"
            android:layout_height="@dimen/dimen_size_20"
            android:src="@mipmap/login_icon01"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/et_name"
            style="@style/Font14_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingStart="@dimen/dimen_size_10" />

        <Button
            android:id="@+id/bt_yzm"
            style="@style/Font14_lighter"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_size_25"
            android:background="@drawable/rec_bg_trans_stroke_red"
            android:onClick="doClick"
            android:paddingEnd="@dimen/dimen_size_10"
            android:paddingStart="@dimen/dimen_size_10"
            android:text="获取验证码"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginEnd="@dimen/dimen_size_15"
        android:layout_marginStart="@dimen/dimen_size_15"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dimen_size_15"
        android:paddingStart="@dimen/dimen_size_15">

        <ImageView
            android:layout_width="@dimen/dimen_size_20"
            android:layout_height="@dimen/dimen_size_20"
            android:src="@mipmap/login_icon03"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/et_yzm"
            style="@style/Font14_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1"
            android:paddingStart="@dimen/dimen_size_10" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginEnd="@dimen/dimen_size_15"
        android:layout_marginStart="@dimen/dimen_size_15"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dimen_size_15"
        android:paddingStart="@dimen/dimen_size_15">

        <ImageView
            android:layout_width="@dimen/dimen_size_20"
            android:layout_height="@dimen/dimen_size_20"
            android:src="@mipmap/login_icon02"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/et_pwd"
            style="@style/Font14_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="请输入字母+数字组合，6~20位密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingStart="@dimen/dimen_size_10" />

        <CheckBox
            android:id="@+id/cb_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cb_login_selector"
            android:button="@null" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginEnd="@dimen/dimen_size_15"
        android:layout_marginStart="@dimen/dimen_size_15"
        android:background="@color/white" />

    <Button
        android:id="@+id/bt_register"
        style="@style/Font15_white_medium"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginEnd="@dimen/dimen_size_20"
        android:layout_marginStart="@dimen/dimen_size_20"
        android:layout_marginTop="@dimen/dimen_size_20"
        android:background="@drawable/rec_bg_red"
        android:onClick="doClick"
        android:text="立即注册" />

    <LinearLayout
        android:id="@+id/register_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:onClick="doClick"
        android:paddingBottom="@dimen/dimen_size_10"
        android:paddingTop="@dimen/dimen_size_10">

        <TextView
            style="@style/Font14_lighter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号，去" />

        <TextView
            style="@style/Font14_lighter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dimen_size_20">

        <TextView
            style="@style/Font13_lighter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击注册即表示同意" />

        <TextView
            android:id="@+id/register_deal"
            style="@style/Font13_lighter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="doClick"
            android:paddingBottom="@dimen/dimen_size_10"
            android:paddingTop="@dimen/dimen_size_10"
            android:text="《隐私条例和服务条款》"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

</LinearLayout>