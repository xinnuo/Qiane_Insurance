<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dimen_size_15"
        android:paddingStart="@dimen/dimen_size_15">

        <TextView
            android:id="@+id/dialog_type_name"
            style="@style/Font14_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_size_1"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_size_25"
            android:layout_marginStart="@dimen/dimen_size_10"
            android:background="@drawable/rec_bg_white_stroke_lighter"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/dialog_type_num"
                style="@style/Font14_black"
                android:layout_width="@dimen/dimen_size_100"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:inputType="number"
                android:maxLength="9"
                android:paddingStart="@dimen/dimen_size_15"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/dialog_type_num_clear"
                android:layout_width="@dimen/dimen_size_25"
                android:layout_height="match_parent"
                android:padding="@dimen/dimen_size_5"
                android:src="@mipmap/plan_del01"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/dialog_type_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_10"
        android:background="@color/background" />

</LinearLayout>