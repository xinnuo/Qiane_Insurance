<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_plan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/item_plan_divider3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/item_plan_check"
            style="@style/Font15_black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/transparent"
            android:button="@null"
            android:clickable="false"
            android:drawableEnd="@drawable/rb_plan_selector"
            android:paddingEnd="@dimen/dimen_size_15"
            android:paddingStart="@dimen/dimen_size_15"
            android:text="标题" />

        <LinearLayout
            android:id="@+id/item_plan_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <View
            android:id="@+id/item_plan_divider1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginEnd="@dimen/dimen_size_15"
            android:layout_marginStart="@dimen/dimen_size_15"
            android:background="@color/divider" />

    </LinearLayout>

    <View
        android:id="@+id/item_plan_divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_10"
        android:background="@color/background" />

</LinearLayout>