<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_plan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/item_plan_check"
        style="@style/Font15_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:button="@null"
        android:clickable="false"
        android:drawableEnd="@drawable/rb_plan_selector"
        android:paddingEnd="@dimen/dimen_size_15"
        android:paddingStart="@dimen/dimen_size_15"
        android:text="标题" />

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/item_plan_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:el_duration="300"
        app:el_expanded="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height" />

            <ImageView
                android:id="@+id/item_member_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </net.cachapa.expandablelayout.ExpandableLayout>

    <View
        android:id="@+id/item_plan_divider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider"
        android:layout_marginEnd="@dimen/dimen_size_15"
        android:layout_marginStart="@dimen/dimen_size_15" />

    <View
        android:id="@+id/item_plan_divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_10"
        android:background="@color/background" />

</LinearLayout>